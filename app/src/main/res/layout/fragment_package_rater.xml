<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="io.github.nircek.applicationsieve.ui.PackageViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".fragment.PackageRater">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{_->viewmodel.randomize()}"
            android:text="@string/pick_btn" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewmodel.description}" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="@{_->viewmodel.startApp()}"
            android:scaleType="fitXY"
            android:src="@{viewmodel.selectedAppIcon}" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="7"
            android:rating="@={viewmodel.selectedAppRating}"
            android:stepSize="0.16666666666666666" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{_-> viewmodel.add()}"
            android:text="@string/rate_btn" />
    </LinearLayout>

</layout>
