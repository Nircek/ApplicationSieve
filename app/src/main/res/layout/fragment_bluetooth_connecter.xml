<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="8dp">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="io.github.nircek.applicationsieve.ui.PackageViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/enable_bluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_bluetooth" />

        <Button
            android:id="@+id/grant_bluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/grant_bluetooth" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@{vm.pairedDevices.live}" />
    </LinearLayout>

</layout>
